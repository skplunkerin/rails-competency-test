<% if @crud_access %>
  <div class="row article-settings">
    <ul class="nav">
      <li class="nav-item nav__articles">
        <%= link_to "Edit", edit_article_path(@article), class: 'nav-link' %>
      </li>
      <li class="nav-item nav__articles">
        <%= link_to "Delete", article_path(@article), class: 'nav-link', method: :delete, data: {
          confirm: "Are you sure you want to delete \"#{@article.title}\"? This cannot be undone!"
        } %>
      </li>
    </ul>
  </div>
<% end %>
<div class="row article">
  <h1 class="col-12 article__title"><%= @article.title %></h1>
  <h2 class="col-12 article__subtitle"><%= @article.category_friendly %></h2>
  <div class="col-12 article__content">
    <%= @article.content.html_safe %>
  </div>
</div>
